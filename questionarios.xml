<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    tools:context=".Questionarios">
    <TextView
        android:id="@+id/user_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Escolha o seu Questionário!"
        android:textSize="25sp" />
    <ImageView
        android:id="@+id/exampleImageView"
        android:layout_width="266dp"
        android:layout_height="111dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/psychology"
        android:paddingLeft="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:text="Questionários"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="@string/QuestionárioMatinal"
        android:layout_gravity="center"
        android:id="@+id/btn_questionário_matinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textSize="25sp"/>
    <Button
        android:text="@string/QuestionárioTarde"
        android:layout_gravity="center"
        android:id="@+id/btn_questionário_tarde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textSize="25sp"/>
    <Button
        android:text="@string/QuestionárioNoite"
        android:layout_gravity="center"
        android:id="@+id/btn_questionário_noite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textSize="25sp"/>
</LinearLayout>